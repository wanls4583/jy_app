/**app.wxss**/
@import "css/van-custom.wxss";
@import "css/padding-margin.wxss";
@import "css/theme.wxss";
@import "css/flex.wxss";

page {
    height: 100%;
    font-size: 30rpx;
}

view,
input,
textarea,
scroll-view,
image {
    box-sizing: border-box;
    color: #333;
    font-size: 30rpx;
}

.container {
    overflow: auto;
    height: 100%;
    background-color: #f1f1f1;
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    z-index: 100;
    background: #fff;
}

.footer button {
    height: 50px;
    width: 120px !important;
}

.border-top {
    border-top: 1rpx solid #eee;
}

.border-bottom {
    border-bottom: 1rpx solid #eee;
}

.align-right {
    text-align: right;
}

.align-center {
    text-align: center;
}

.font-bold {
    font-weight: bold;
}

.font-title {
    font-size: 34rpx;
}

.inline-block {
    display: inline-block;
}

.width-100 {
    width: 100%;
}

.width-50 {
    width: 50%;
}

.height-100 {
    height: 100%;
}

.height-50 {
    height: 50%;
}

.width-100vw {
    width: 100vw;
}

.width-100vh {
    width: 100vh;
}

.width-50vw {
    width: 50vw;
}

.width-50vh {
    width: 50vh;
}

.height-100vh {
    height: 100vh;
}

.height-100vw {
    height: 100vw;
}

.height-50vh {
    height: 50vh;
}

.height-50vw {
    height: 50vw;
}

.width-100rpx {
    width: 100rpx;
}

.width-50rpx {
    width: 50rpx;
}

.height-100rpx {
    height: 100rpx;
}

.height-50rpx {
    height: 50rpx;
}

.width-100px {
    width: 100px;
}

.width-50px {
    width: 50px;
}

.height-100px {
    height: 100px;
}

.height-50px {
    height: 50px;
}

.position-relative {
    position: relative;
}

.position-absolute {
    position: absolute;
}

.position-fixed {
    position: fixed;
}

.top-0 {
    top: 0;
}

.bottom-0 {
    bottom: 0;
}

.left-0 {
    left: 0;
}

.right-0 {
    right: 0;
}