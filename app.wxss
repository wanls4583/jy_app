/**app.wxss**/
@import "css/van-custom.wxss";
@import "css/padding-margin.wxss";
@import "css/theme.wxss";

page {
    height: 100%;
    font-size: 30rpx;
}

view,
input,
textarea,
scroll-view,
image {
    box-sizing: border-box;
    color: #333;
    font-size: 30rpx;
}

.container {
    overflow: auto;
    height: 100%;
    background-color: #f1f1f1;
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    z-index: 100;
    background: #fff;
}

.footer button {
    height: 50px;
    width: 120px !important;
}

.flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.flex-center {
    display: flex;
    align-items: center;
    justify-content: center;
}

.flex-column {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.flex-column-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.border-top {
    border-top: 1rpx solid #eee;
}

.border-bottom {
    border-bottom: 1rpx solid #eee;
}