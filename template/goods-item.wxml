<template name="taocan-item">
	<view bindtap="onclickProdcut" class="product-item flex--center--start white-background-color" data-id="{{taocan.id}}">
		<image class="width-150rpx height-150rpx" mode="aspectFit" src="{{taocan.goodsPic}}" />
		<view class="flex-grow-1 padding-top-bottom-30 margin-left-30 border-bottom">
			<view class="flex-direction-column flex--start--between height-150rpx">
				<view>{{taocan.goodsName}}</view>
				<view class="flex--center--between width-100">
					<text class="gray-color">一天{{taocan.frequency}}次</text>
					<text wx:if="{{taocan.isOrder}}">￥{{taocan.price}}</text>
					<text class="danger-color font-bold" wx:else>￥{{taocan.price}}/{{taocan._unit}}</text>
				</view>
			</view>
		</view>
	</view>
</template>
<template name="product-item">
	<view bindtap="onclickProdcut" class="product-item flex--center--start white-background-color" data-id="{{product.id}}">
		<image class="width-150rpx height-150rpx" mode="aspectFit" src="{{product.goodsPic}}" />
		<view class="flex-grow-1 padding-top-bottom-30 margin-left-30 border-bottom">
			<view class="flex-direction-column flex--start--between height-150rpx">
				<view>{{product.goodsName}}</view>
				<view class="flex--center--between width-100">
					<text class="gray-color">{{product.standardNum}}{{product._standardUnit}}/{{product._unit}}</text>
					<text wx:if="{{product.isOrder}}">￥{{product.price}}</text>
					<text class="danger-color font-bold" wx:else>￥{{product.price}}/{{product._unit}}</text>
				</view>
			</view>
		</view>
	</view>
</template>
<template name="order-goods-item">
	<view class="order-goods-item flex--center--start white-background-color">
		<image class="width-150rpx height-150rpx" mode="aspectFill" src="{{goods.goodsPic}}" />
		<view class="flex-grow-1 margin-left-30 padding-top-bottom-30 border-bottom">
			<view class="flex-direction-column flex--start--between height-150rpx">
				<view>{{goods.goodsName}}</view>
				<view class="flex--center--between width-100">
					<text class="gray-color">x{{goods.count||goods.num}}{{goods._unit}}</text>
					<text class>￥{{goods.totalAmount||goods.price}}</text>
				</view>
			</view>
		</view>
	</view>
</template>
