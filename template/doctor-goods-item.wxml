<template name="doctor-taocan-item">
	<view bindtap="onclickProdcut" class="product-item flex--center--start white-background-color" data-id="{{taocan.id}}">
		<image class="width-150rpx height-150rpx" mode="aspectFit" src="{{taocan.goodsPic}}" />
		<view class="flex-grow-1 margin-left-30 padding-top-bottom-30 border-bottom">
			<view class="flex-direction-column flex--start--between height-150rpx">
				<view>{{taocan.goodsName}}</view>
				<view class="flex--center--between width-100">
					<text class="gray-color">一天{{taocan.frequency}}次</text>
				</view>
				<view class="flex--center--between width-100">
					<text class="danger-color font-bold">￥{{taocan.price}}/{{taocan._unit}}</text>
					<view catchtap="onAddTaocan" class="button primary small" data-item="{{taocan}}">添加该套餐</view>
				</view>
			</view>
		</view>
	</view>
</template>
<template name="doctor-product-item">
	<view bindtap="onclickProdcut" class="product-item flex--center--start white-background-color" data-id="{{product.id}}">
		<image class="width-150rpx height-150rpx" mode="aspectFit" src="{{product.goodsPic}}" />
		<view class="flex-grow-1 margin-left-30 padding-top-bottom-30 border-bottom">
			<view class="flex-direction-column flex--start--between height-150rpx">
				<view>{{product.goodsName}}</view>
				<view class="flex--center--between width-100">
					<text class="gray-color">{{product.standardNum}}{{product._standardUnit}}/{{product._unit}}</text>
				</view>
				<view class="flex--center--between width-100">
					<text class="danger-color font-bold">￥{{product.price}}/{{product._unit}}</text>
					<view catchtap="onAddProduct" class="button primary small" data-item="{{product}}">添加该产品</view>
				</view>
			</view>
		</view>
	</view>
</template>