<!-- index.wxml -->
<view class="container">
    <view class="padding-left-right-20 white-background-color">
        <view wx:for="{{messageList}}" wx:key="id" class="flex--center--between padding-top-bottom-20 clickable" data-id="{{item.id}}" data-roomid="{{item.roomId}}" bindtap="onClickMsg">
            <view class="width-80rpx height-80rpx gray-background-color radius-8rpx">
                <image class="width-100 height-100 radius-8rpx" src="{{item.wxAvatar}}" mode="aspectFill" />
            </view>
            <view class="flex-grow-1 flex--start--center flex-direction-column height-80rpx padding-top-bottom-10 margin-left-20 border-bottom">
                <view>{{item.wxNickname}}</view>
                <view class="gray-color font-small">{{item.lastMessage}}</view>
            </view>
        </view>
    </view>
</view>