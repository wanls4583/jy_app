<view class="container white-background-color">
	<pull-scroll-view bindrefresh="onRefresh" refresher-background="#2aafff" refresher-default-style="white" stop-refresh="{{stopRefresh}}">
		<view style="min-height:{{minContentHeight}}px">
			<view class="padding-30 padding-top-0" style="padding-left:60rpx;padding-right:60rpx;background:linear-gradient(to bottom, rgb(42, 175, 255), #4286f4)">
				<view class="flex--center--start">
					<view class="width-100rpx height-100rpx margin-right-30 radius-50 border border-color-white overflow-hidden">
						<image class="width-100 height-100" src="{{doctorInfo.avatar || userInfo.avatarUrl}}" />
					</view>
					<view class="flex-grow-1 flex--start--between flex-direction-column height-100rpx white-color padding-top-bottom-10">
						<view class="white-color">
							<text class="font-bold">{{doctorInfo.doctorName || userInfo.nickname}}</text>
							<text class="font-small" decode="{{true}}">&nbsp;&nbsp;{{doctorInfo.jobTitle || ''}}</text>
						</view>
						<text class="font-small" decode="{{true}}" wx:if="{{doctorInfo.workHospitalName||doctorInfo.onlineDepartmentName}}">{{doctorInfo.workHospitalName || ''}}</text>
					</view>
				</view>
				<view class="flex--center--between margin-top-30" wx:if="{{doctorInfo.consultNum}}">
					<view>
						<view class="white-color">待接诊</view>
						<view class="align-center font-large warn-color text-shadow">{{doctorInfo.consultNum.waitingNum}}</view>
					</view>
					<view class="white-color">|</view>
					<view>
						<view class="white-color">问诊中</view>
						<view class="align-center font-large warn-color text-shadow">{{doctorInfo.consultNum.talkingNum}}</view>
					</view>
					<view class="white-color">|</view>
					<view>
						<view class="white-color">已服务</view>
						<view class="align-center font-large warn-color text-shadow">{{doctorInfo.consultNum.completeNum}}</view>
					</view>
				</view>
			</view>
			<view class="flex flex--center--between padding-top-bottom-20" style="padding-left:60rpx;padding-right:60rpx">
				<view bindtap="onCheckGoto" class="padding-top-bottom-20 align-center clickable" data-url="/pages/order-list/index">
					<image class="width-80rpx height-80rpx" src="/image/icon_order.png" />
					<view class="font-small">订单列表</view>
				</view>
				<!-- <view bindtap="onCheckGoto" class="padding-top-bottom-20 align-center clickable" data-url="/pages/interrogation/invite/index">
					<image class="width-80rpx height-80rpx" src="/image/icon_doctor.png" />
					<view class="font-small">邀请医生</view>
				</view>-->
				<view
					bindtap="onCheckGoto"
					class="padding-top-bottom-20 align-center clickable"
					data-url="/pages/interrogation/qrcode-share/index?type=invite&doctorId={{userInfo.doctorId}}&userId={{userInfo.id}}"
				>
					<image class="width-80rpx height-80rpx" src="/image/icon_qrcode.png" />
					<view class="font-small">二维码名片</view>
				</view>
				<view bindtap="onCheckGoto" class="padding-top-bottom-20 align-center clickable" data-url="/pages/interrogation/doctor-setting/index">
					<image class="width-80rpx height-80rpx" src="/image/icon_setting.png" />
					<view class="font-small">服务设置</view>
				</view>
			</view>
			<view class="position-relative padding-30 white-background-color" style="height:33vw;" wx:if="{{banner.length}}">
				<swiper
					autoplay="{{true}}"
					circular="{{true}}"
					class="overflow-hidden height-100 radius-8px shadow"
					duration="{{500}}"
					interval="{{5000}}"
					style="transform:translateY(0);"
				>
					<swiper-item bindtap="onClickBanner" data-link="{{item.linkUrl}}" wx:for="{{banner}}" wx:for-item="item" wx:key="picUrl">
						<view class="position-relative height-100" style="background:url({{item.picUrl}}) no-repeat center;background-size:cover">
							<view class="banner-bottom position-absolute left-0 bottom-0 width-100 align-right">
								<text style="color:{{item.titleColor}}">{{item.title||''}}</text>
							</view>
						</view>
					</swiper-item>
				</swiper>
			</view>
		</view>
		<view class="flex--center--center flex-direction-column padding-left-right-30 white-background-color" style="height:120px">
			<view class="flex--center--center">
				<image src="/image/logo.png" style="width:40rpx;height:40rpx;" />
				<text class="margin-left-20 font-title">钜元营养</text>
			</view>
			<view class="flex--center--between width-100 margin-top-20">
				<view class="flex-grow-1 border-bottom border-color-ddd"></view>
				<text class="margin-left-right-30 gray-color font-small" decode="{{true}}">健康营养&nbsp;&nbsp;严格审核&nbsp;&nbsp;专业安全</text>
				<view class="flex-grow-1 border-bottom border-color-ddd"></view>
			</view>
		</view>
	</pull-scroll-view>
</view>
