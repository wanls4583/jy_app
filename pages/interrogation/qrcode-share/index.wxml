<view class="container white-background-color" style="padding-bottom:60px">
	<view class="height-100" style="padding:60px">
		<van-image fit="contain" height="100%" src="{{barcodeUrl}}" use-error-slot use-loading-slot width="100%">
			<van-loading size="20" slot="loading" type="spinner" vertical />
			<text slot="error">图片加载失败</text>
		</van-image>
	</view>
	<view class="position-fixed bottom-0 z-index-100 width-100 padding-30 flex--center--around">
		<view bindtap="onShare" class="button primary">分享</view>
		<view bindtap="onSave" class="button primary">保存</view>
	</view>
</view>
<van-dialog id="van-dialog" />
