<view class="container">
    <view class="primary-background-color padding-30 flex--center--start">
        <block wx:if="{{userInfo}}">
            <view class="width-100rpx height-100rpx margin-30 margin-left-0 radius-50 border border-color-white overflow-hidden">
                <image src="{{userInfo.avatarUrl}}" class="width-100 height-100"></image>
            </view>
            <text class="white-color">{{userInfo.nickName}}</text>
        </block>
        <block wx:else>
            <view class="flex--center--center padding-30 width-100">
                <button wx:if="{{!userInfo}}" class='button plain border-color-white white-color' open-type="getUserInfo" bindgetuserinfo="getUserInfo">登录</button>
            </view>
        </block>
    </view>
    <view class="white-background-color">
        <view class="padding-left-right-30 clickable" bindtap="onClickOrder">
            <view class="flex--center--between padding-top-bottom-30 border-bottom">
                <text>订单列表</text>
                <van-icon name="arrow" color="#ccc" />
            </view>
        </view>
        <view class="padding-left-right-30 clickable">
            <view class="flex--center--between padding-top-bottom-30 border-bottom">
                <text>营养咨询</text>
                <view class="flex--center--center">
                    <text wx:if="{{messageCount}}" class="margin-right-30 danger-color font-small">{{messageCount}}条信息</text>
                    <van-icon name="arrow" color="#ccc" />
                </view>
            </view>
        </view>
        <view class="padding-left-right-30 clickable">
            <view class="flex--center--between padding-top-bottom-30 border-bottom">
                <text>患者信息</text>
                <van-icon name="arrow" color="#ccc" />
            </view>
        </view>
        <view class="padding-left-right-30 clickable" bindtap="onClickAddress">
            <view class="flex--center--between padding-top-bottom-30 border-bottom">
                <text>收货地址</text>
                <van-icon name="arrow" color="#ccc" />
            </view>
        </view>
    </view>
</view>