<view class="container">
    <view class="flex--center--between background-gradient padding-30">
        <view class="flex--center--center">
            <view class="width-100rpx height-100rpx margin-30 margin-left-0 radius-50 background-color-#ddd border border-color-white overflow-hidden">
                <image src="{{userInfo.avatarUrl}}" class="width-100 height-100"></image>
            </view>
            <text class="white-color">{{userInfo.nickname || '--'}}</text>
        </view>
        <button class="flex--center--center white-color padding-30 padding-right-0" hover-class="none" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
            个人资料
            <van-icon name="arrow" color="#fff" />
        </button>
    </view>
    <view class="flex padding-30 white-background-color">
        <block wx:if="{{userInfo.role=='USER'}}">
            <view class="width-25 align-center" bindtap="onGoto" data-url="/pages/order-list/index">
                <image class="width-80rpx height-80rpx" src="/image/icon_order.png"></image>
                <view class="font-mini">订单列表</view>
            </view>
            <view class="width-25 align-center" bindtap="onGoto" data-url="/pages/interrogation/user-patient-list/index">
                <image class="width-80rpx height-80rpx" src="/image/icon_wenzhen.png"></image>
                <view class="font-mini">问诊患者</view>
            </view>
        </block>
    </view>
    <view class="margin-top-20 white-background-color">
        <view class="padding-left-right-30 clickable">
            <view class="flex--center--between padding-top-bottom-30 border-bottom" bindtap="onSitchRole">
                <text>切换账号</text>
                <view class="flex--center--center">
                    <text class="primary-color">{{userInfo.role=='DOCTOR'?'切换为患者账号':'切换为医生账号'}}</text>
                    <van-icon name="arrow" color="#ccc" />
                </view>
            </view>
        </view>
        <view class="padding-left-right-30 clickable">
            <view class="flex--center--between padding-top-bottom-30 border-bottom" bindtap="onGoto" data-url="/pages/feedback/index">
                <text>功能反馈</text>
                <view class="flex--center--center">
                    <van-icon name="arrow" color="#ccc" />
                </view>
            </view>
        </view>
        <view class="padding-left-right-30 clickable">
            <view class="flex--center--between padding-top-bottom-30 border-bottom" bindtap="onGoto" data-type="tab" data-url="/pages/interrogation/message-list/index">
                <text>消息通知</text>
                <view class="flex--center--center">
                    <text wx:if="{{messageCount}}" class="danger-color">{{messageCount}}条未读消息</text>
                    <van-icon name="arrow" color="#ccc" />
                </view>
            </view>
        </view>
        <view class="padding-left-right-30 clickable">
            <view class="flex--center--between padding-top-bottom-30 border-bottom">
                <text>医生入驻</text>
                <view class="flex--center--center">
                    <van-icon name="arrow" color="#ccc" />
                </view>
            </view>
        </view>
        <view class="padding-left-right-30 clickable">
            <view class="flex--center--between padding-top-bottom-30 border-bottom" bindtap="onClickPhone">
                <text>客服</text>
                <view class="flex--center--center">
                    <text class="primary-color">{{phone}}</text>
                    <van-icon name="arrow" color="#ccc" />
                </view>
            </view>
        </view>
        <view class="padding-left-right-30 clickable">
            <view class="flex--center--between padding-top-bottom-30 border-bottom" bindtap="onGoto" data-url="/pages/setting/index">
                <text>设置</text>
                <view class="flex--center--center">
                    <van-icon name="arrow" color="#ccc" />
                </view>
            </view>
        </view>
    </view>
</view>