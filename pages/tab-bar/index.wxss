.tab-bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #ffffff;
    border-top: 1px solid #eeeeee;
}

.tab-bar-item {
    padding: 5px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: column;
}

.tab-bar-item image {
    width: 22px;
    height: 22px;
}

.tab-bar-item text {
    line-height: 18px;
    font-size: 12px;
}