<view class="container">
	<view class="position-absolute top-0 bottom-0 width-100 overflow-auto" style="bottom:140rpx">
		<view class="white-background-color">
			<view class="padding-left-right-30">
				<view class="padding-top-bottom-30 border-bottom">
					<text>{{patient.patientName}}</text>
					<text>，{{patient._sex}}</text>
					<text>，{{patient.age}}岁</text>
					<text>，{{patient.departmentName}}</text>
					<text>，{{patient.sickbed}}床</text>
				</view>
			</view>
			<readonly-field bindtap="onShowDate" label="查房时间" value="{{ward.checkDate}}" />
		</view>
		<view class="white-background-color padding-top-bottom-30 margin-top-20">
			<view class="margin-left-30 pre-vertical-line primary-line-color">肠内营养耐受情况</view>
			<view class="margin-top-30 padding-left-right-30">
				<van-checkbox-group bind:change="onChange" data-prop="ward.tolerance_select" value="{{ward.tolerance_select}}">
					<van-checkbox name="正常" shape="square">
						<view>
							<view class="flex">
								<view class="flex-shrink-0 label-color">正常</view>
								<input bindinput="onInput" class="width-100px border-bottom" data-prop="ward.tolerance_count1" type="text" value="{{ward.tolerance_count1}}" />
								<text class="flex-shrink-0">ml/次</text>
								<input bindinput="onInput" class="width-100px border-bottom" data-prop="ward.tolerance_ml1" type="text" value="{{ward.tolerance_ml1}}" />
								<text class="flex-shrink-0">次/天，</text>
							</view>
						</view>
					</van-checkbox>
					<van-checkbox name="腹泻" shape="square">
						<view>
							<view class="flex">
								<view class="flex-shrink-0 label-color">腹泻</view>
								<input bindinput="onInput" class="width-100px border-bottom" data-prop="ward.tolerance_count2" type="text" value="{{ward.tolerance_count2}}" />
								<text class="flex-shrink-0">ml/次</text>
								<input bindinput="onInput" class="width-100px border-bottom" data-prop="ward.tolerance_ml2" type="text" value="{{ward.tolerance_ml2}}" />
								<text class="flex-shrink-0">次/天，</text>
							</view>
							<view class="flex margin-top-30">
								<text>性状</text>
								<input bindinput="onInput" class="width-100px border-bottom" data-prop="ward.tolerance_xingzhuang" type="text" value="{{ward.tolerance_xingzhuang}}" />
							</view>
						</view>
					</van-checkbox>
					<van-checkbox name="呕吐" shape="square">
						<view class="flex">
							<view class="flex-shrink-0 label-color">呕吐</view>
							<input bindinput="onInput" class="width-100px border-bottom" data-prop="ward.tolerance_count3" type="text" value="{{ward.tolerance_count3}}" />
							<text class="flex-shrink-0">ml/次</text>
							<input bindinput="onInput" class="width-100px border-bottom" data-prop="ward.tolerance_ml3" type="text" value="{{ward.tolerance_ml3}}" />
							<text class="flex-shrink-0">次/天，</text>
						</view>
					</van-checkbox>
					<van-checkbox name="便秘" shape="square">
						<view class="flex">
							<view class="flex-shrink-0 label-color">便秘</view>
							<view class="flex">
								<input bindinput="onInput" class="width-100px border-bottom" data-prop="ward.tolerance_day" type="text" value="{{ward.tolerance_day}}" />
								<text class="flex-shrink-0">天胃排便</text>
							</view>
						</view>
					</van-checkbox>
					<van-checkbox name="反流" shape="square">反流</van-checkbox>
					<van-checkbox name="腹胀" shape="square">腹胀</van-checkbox>
					<van-checkbox name="口感差" shape="square">口感差</van-checkbox>
					<van-checkbox name="没有食欲" shape="square">没有食欲</van-checkbox>
					<van-checkbox name="消化道出血" shape="square">消化道出血</van-checkbox>
					<van-checkbox name="血糖偏高" shape="square">
						<view class="flex">
							<view class="flex-shrink-0 label-color margin-right-30">血糖偏高</view>
							<view>
								<view class="flex">
									<text class="flex-shrink-0">空腹</text>
									<input bindinput="onInput" class="width-100rpx border-bottom" data-prop="ward.tolerance_mmol1" type="text" value="{{ward.tolerance_mmol1}}" />
									<text>-</text>
									<input bindinput="onInput" class="width-100rpx border-bottom" data-prop="ward.tolerance_mmol2" type="text" value="{{ward.tolerance_mmol2}}" />
									<text class="flex-shrink-0">mmol/L</text>
								</view>
								<view class="flex margin-top-30">
									<text class="flex-shrink-0">餐后</text>
									<input bindinput="onInput" class="width-100rpx border-bottom" data-prop="ward.tolerance_mmol3" type="text" value="{{ward.tolerance_mmol3}}" />
									<text>-</text>
									<input bindinput="onInput" class="width-100rpx border-bottom" data-prop="ward.tolerance_mmol4" type="text" value="{{ward.tolerance_mmol4}}" />
									<text class="flex-shrink-0">mmol/L</text>
								</view>
							</view>
						</view>
					</van-checkbox>
					<van-checkbox name="不详" shape="square">
						<view class="flex">
							<view class="flex-shrink-0 label-color">不详，原因</view>
							<input bindinput="onInput" class="border-bottom" data-prop="ward.tolerance_reason" type="text" value="{{ward.tolerance_reason}}" />
						</view>
					</van-checkbox>
				</van-checkbox-group>
				<view class="padding-bottom-30">备注</view>
				<textarea class="width-100 padding-30 border" data-prop="ward.tolerance_remark" value="{{ward.tolerance_remark}}"></textarea>
			</view>
		</view>
		<view class="white-background-color padding-top-bottom-30 margin-top-20">
			<view class="margin-left-30 pre-vertical-line primary-line-color">肠内营养方案调整</view>
			<view class="margin-top-30 padding-left-right-30">
				<van-checkbox-group bind:change="onChange" data-prop="ward.changePlan_select" value="{{ward.changePlan_select}}">
					<van-checkbox name="维持" shape="square">维持</van-checkbox>
					<van-checkbox name="增量" shape="square">增量</van-checkbox>
					<van-checkbox name="减量" shape="square">减量</van-checkbox>
					<van-checkbox name="减轻副反应" shape="square">减轻副反应</van-checkbox>
				</van-checkbox-group>
				<view class="padding-bottom-30">备注</view>
				<textarea class="width-100 padding-30 border" data-prop="ward.changePlan_remark" value="{{ward.changePlan_remark}}"></textarea>
			</view>
		</view>
	</view>
	<view class="white-background-color position-absolute bottom-0 z-index-100 width-100 flex--center--around padding-30">
		<view bindtap="onSave" class="button primary block">保存</view>
	</view>
</view>
<van-popup position="bottom" show="{{dateVisible}}">
	<van-datetime-picker bind:cancel="onCancelDate" bind:confirm="onConfirmDate" type="date" value="{{checkDate}}" />
</van-popup>
