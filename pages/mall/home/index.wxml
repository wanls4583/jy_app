<view class="container">
    <view class="position-fixed top-0 width-100">
        <van-search shape="round" placeholder="请输入医生/产品" disabled="{{true}}" bindtap="onGotoSearch" />
    </view>
    <view style="height:54px"></view>
    <view wx:if="{{banner.length}}" class="position-relative padding-30 white-background-color" style="height:40vw;">
        <swiper class="overflow-hidden height-100 radius-8px" style="transform:translateY(0);" circular="{{true}}" autoplay="{{true}}" interval="{{500000}}" duration="{{500}}" bindchange="bannerChang">
            <swiper-item wx:for="{{banner}}" wx:for-item="item" wx:key="picUrl" data-link="{{item.linkUrl}}" bindtap="onClickBanner">
                <view class="position-relative height-100" style="background:url({{item.picUrl}}) no-repeat center;background-size:cover">
                    <view class="banner-bottom position-absolute left-0 bottom-0 width-100 white-color align-right">
                        <text>{{item.bannerName}}</text>
                    </view>
                </view>
            </swiper-item>
        </swiper>
    </view>
    <view class="flex--center--between padding-30 margin-top-20 white-background-color">
        <view class="flex-direction-column flex--center--between">
            <view class="width-80rpx height-80rpx" style="background:url(/image/icon_wenzhen.png) no-repeat center;background-size:cover"></view>
            <text class="font-title margin-top-20">快速问诊</text>
            <text class="font-small gray-color margin-top-10">智能匹配医生</text>
        </view>
        <view class="flex-direction-column flex--center--between">
            <view class="width-80rpx height-80rpx" style="background:url(/image/icon_doctor.png) no-repeat center;background-size:cover"></view>
            <text class="font-title margin-top-20">找医生</text>
            <text class="font-small gray-color margin-top-10">营养专家会诊</text>
        </view>
        <view class="flex-direction-column flex--center--between">
            <view class="width-80rpx height-80rpx" style="background:url(/image/icon_product.png) no-repeat center;background-size:cover"></view>
            <text class="font-title margin-top-20">营养产品</text>
            <text class="font-small gray-color margin-top-10">快速送货上门</text>
        </view>
    </view>
    <view class="margin-top-20 white-background-color">
        <view class="font-title padding-30">营养中心</view>
        <view class="flex flex-wrap-wrap">
            <view wx:for="{{departmentList}}" wx:key="id" class="margin-left-30 margin-bottom-30 padding-20 radius-8px background-gradient" style="width:330rpx" data-id="{{item.id}}">
                <view class="white-color">{{item.departmentName}}</view>
                <view class="margin-top-10 font-small white-color">{{item.introduce}}</view>
            </view>
        </view>
    </view>
    <view class="margin-top-20 white-background-color padding-30">
        <view class="flex--center--between">
            <text class="font-title">推荐医生</text>
            <text class="font-small gray-color" bindtap="onClickMore">全部>></text>
        </view>
        <view wx:for="{{doctorList}}" wx:key="id" class="flex--start--between padding-top-bottom-30 border-bottom">
            <view class="radius-8px overflow-hidden width-100rpx height-100rpx gray-background-color">
                <image class="width-100 height-100" src="{{item.avatar}}" mode="aspectFill"></image>
            </view>
            <view class="flex-grow-1 padding-left-30">
                <view>
                    <text>{{item.doctorName}}</text>
                    <text class="gray-color font-small" decode="{{true}}">&nbsp;&nbsp;{{item.jobTitle}}</text>
                </view>
                <text class="margin-top-10 gray-color font-small" decode="{{true}}">{{item.workHospitalName}}&nbsp;&nbsp;{{item.onlineDepartmentName}}</text>
                <view class="margin-top-10 gray-color font-small">擅长：{{item.goodAtDomain}}</view>
                <text class="flex margin-top-10" decode="{{true}}">图文问诊&nbsp;<text class="danger-color">￥{{item.consultOrderPrice}}</text></text>
            </view>
        </view>
    </view>
    <view wx:if="{{kepuList.length}}" class="margin-top-20 overflow-hidden white-background-color padding-left-right-30">
        <view class="font-title padding-top-bottom-30">健康科普</view>
        <view wx:for="{{kepuList}}" wx:key="id" class="padding-30 margin-bottom-30 radius-8px gray-background-color" style="background:url({{item.picUrl}}) no-repeat center;background-size:cover;height:33vw" data-link="{{item.linkUrl}}" bindtap="onClickBanner">
            <view class="font-title white-color" style="text-shadow:1px 1px 4px #000">{{item.bannerName}}</view>
        </view>
    </view>
    <view class="padding-30">
        <view class="flex--center--center padding-top-30">
            <image src="/image/logo.png" style="width:40rpx;height:40rpx;"></image>
            <text class="margin-left-20 font-title">钜元营养</text>
        </view>
        <view class="padding-bottom-30 margin-top-20 flex--center--between">
            <view class="flex-grow-1 border-bottom border-color-ddd"></view>
            <text class="margin-left-right-30 gray-color font-small" decode="{{true}}">健康营养&nbsp;&nbsp;严格审核&nbsp;&nbsp;专业安全</text>
            <view class="flex-grow-1 border-bottom border-color-ddd"></view>
        </view>
    </view>
</view>