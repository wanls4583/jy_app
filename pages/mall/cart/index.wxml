<import src="/template/order-goods-item.wxml" />
<view class="container padding-bottom-footer" wx:if="{{cart.length}}">
	<view class="padding-left-right-30 white-background-color">
		<view>
			<template data="{{goods:item}}" is="order-goods-item" wx:for="{{cart}}" wx:key="index"></template>
		</view>
	</view>
	<view class="footer flex--center--between border-top">
		<view class="flex-grow-1 height-100 flex--center--start padding-left-30 border-top">
			<text class="primary-color">合计:￥{{cartTotalMoney}}</text>
		</view>
		<view bindtap="onPay" class="button primary center height-100 radius-0">去结算</view>
	</view>
</view>
<view class="container flex--center--center" wx:else>
	<empty class="custom-image" description="购物车为空" />
</view>
