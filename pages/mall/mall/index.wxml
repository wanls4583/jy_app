<view class="container">
    <view class="position-relative padding-30 white-background-color" style="height:40vw">
        <swiper class="overflow-hidden height-100 radius-8px" style="transform:translateY(0);" circular="{{true}}" autoplay="{{true}}" interval="{{500000}}" duration="{{500}}" bindchange="bannerChang">
            <swiper-item wx:for="{{banner}}" wx:for-item="item" wx:key="picUrl" data-link="{{item.linkUrl}}" bindtap="onClickBanner">
                <view class="position-relative height-100" style="background:url({{item.picUrl}}) no-repeat center;background-size:cover">
                    <view class="banner-bottom position-absolute left-0 bottom-0 width-100 white-color align-right">
                        <text>{{item.bannerName}}</text>
                    </view>
                </view>
            </swiper-item>
        </swiper>
    </view>
    <view class="white-background-color">
        <view class="flex--center--between padding-30">
            <text class="font-title">营养套餐</text>
            <text class="font-small gray-color" bindtap="onClickMore" data-type="1">全部>></text>
        </view>
        <view class="flex flex-wrap-wrap">
            <view wx:for="{{taocanList}}" wx:key="id" class="flex flex-direction-column padding-20 margin-left-30 margin-bottom-30 radius-8px overflow-hidden gray-background-color" data-id="{{item.id}}" bindtap="onclickProdcut" style="width:330rpx;">
                <image class="width-100" style="height:270rpx" mode="aspectFit" src="{{item.goodsPic}}"></image>
                <view class="margin-top-20">{{item._goodsName}}</view>
                <view class="margin-top-10 danger-color">{{item.price}}元/天</view>
            </view>
        </view>
    </view>
    <view class="white-background-color">
        <view class="flex--center--between padding-30 padding-top-0">
            <text class="font-title">营养产品</text>
            <text class="font-small gray-color" bindtap="onClickMore" data-type="2">全部>></text>
        </view>
        <view class="flex flex-wrap-wrap">
            <view wx:for="{{productList}}" wx:key="id" class="flex flex-direction-column padding-30 margin-left-30 margin-bottom-30 radius-8px overflow-hidden gray-background-color" data-id="{{item.id}}" bindtap="onclickProdcut" style="width:330rpx;">
                <image class="width-100 border" style="height:270rpx" mode="aspectFit" src="{{item.goodsPic}}"></image>
                <view class="margin-top-20">{{item._goodsName}}</view>
                <view class="margin-top-10 danger-color">{{item.price}}元/{{item._useUnit}}</view>
            </view>
        </view>
    </view>
</view>