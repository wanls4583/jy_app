<view class="container white-background-color">
	<view class="position-fixed top-0 z-index-100 width-100">
		<van-search bindtap="onGotoSearch" disabled="{{true}}" placeholder="请输入产品" shape="round" />
	</view>
	<view style="height:54px"></view>
	<view class="position-relative padding-30" wx:if="{{banner.length}}">
		<swiper
			autoplay="{{true}}"
			bindchange="bannerChang"
			circular="{{true}}"
			class="overflow-hidden height-50vw radius-8px shadow"
			duration="{{500}}"
			interval="{{500000}}"
			style="transform:translateY(0);"
		>
			<swiper-item bindtap="onClickBanner" data-link="{{item.linkUrl}}" wx:for="{{banner}}" wx:for-item="item" wx:key="picUrl">
				<view class="position-relative height-100" style="background:url({{item.picUrl}}) no-repeat center;background-size:cover">
					<view class="banner-bottom position-absolute left-0 bottom-0 width-100 white-color align-right">
						<text>{{item.bannerName}}</text>
					</view>
				</view>
			</swiper-item>
		</swiper>
	</view>
	<view>
		<view class="flex--center--between height-120rpx padding-left-right-30">
			<view class="font-title">营养套餐</view>
			<view bindtap="onClickMore" class="flex--center--center padding-top-bottom-10 font-small gray-color line-height-1em clickable" data-type="2">
				<text>全部</text>
				<van-icon name="arrow" />
			</view>
		</view>
		<view class="flex flex-wrap-wrap">
			<view
				bindtap="onclickProdcut"
				class="flex flex-direction-column margin-left-30 margin-bottom-30 radius-8px overflow-hidden shadow"
				data-id="{{item.id}}"
				style="width:330rpx;"
				wx:for="{{taocanList}}"
				wx:key="id"
			>
				<image class="width-100" mode="aspectFill" src="{{item.goodsPic}}" style="height:270rpx" />
				<view class="padding-20 padding-top-10">
					<view class="ellipse">{{item._goodsName}}</view>
					<view class="margin-top-10 danger-color">{{item.price}}元/天</view>
				</view>
			</view>
		</view>
	</view>
	<view>
		<view class="flex--center--between height-120rpx padding-left-right-30">
			<view class="font-title">营养产品</view>
			<view bindtap="onClickMore" class="flex--center--center padding-top-bottom-10 font-small gray-color line-height-1em clickable" data-type="1">
				<text>全部</text>
				<van-icon name="arrow" />
			</view>
		</view>
		<view class="flex flex-wrap-wrap">
			<view
				bindtap="onclickProdcut"
				class="flex flex-direction-column margin-left-30 margin-bottom-30 radius-8px overflow-hidden shadow"
				data-id="{{item.id}}"
				style="width:330rpx;"
				wx:for="{{productList}}"
				wx:key="id"
			>
				<image class="width-100 border" mode="aspectFill" src="{{item.goodsPic}}" style="height:270rpx" />
				<view class="padding-20 padding-top-10">
					<view class="ellipse">{{item._goodsName}}</view>
					<view class="margin-top-10 danger-color">{{item.price}}元/{{item._useUnit}}</view>
				</view>
			</view>
		</view>
	</view>
	<view class="padding-30 white-background-color">
		<view class="flex--center--center padding-top-30">
			<image src="/image/logo.png" style="width:40rpx;height:40rpx;" />
			<text class="margin-left-20 font-title">钜元营养</text>
		</view>
		<view class="padding-bottom-30 margin-top-20 flex--center--between">
			<view class="flex-grow-1 border-bottom border-color-ddd"></view>
			<text class="margin-left-right-30 gray-color font-small" decode="{{true}}">健康营养&nbsp;&nbsp;严格审核&nbsp;&nbsp;专业安全</text>
			<view class="flex-grow-1 border-bottom border-color-ddd"></view>
		</view>
	</view>
</view>
